---
import Moon from 'astro-heroicons/outline/Moon.astro'
import Sun from 'astro-heroicons/outline/Sun.astro'
---

<div {...Astro.props}>
  <button
    type="button"
    class="size-[inherit] self-center dark:hidden"
    onclick="toggleTheme()"
    aria-label="zum Darktheme wechseln"
  >
    <Moon class="size-[inherit] stroke-inherit p-2" />
  </button>
  <button
    type="button"
    class="hidden size-[inherit] self-center dark:inline-block"
    onclick="toggleTheme()"
    aria-label="zum Lighttheme wechseln"
  >
    <Sun class="size-[inherit] stroke-inherit p-1" />
  </button>
</div>
